<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title }) %>
  <body>
    <!-- prettier-ignore -->
    <%- include('partials/header') %>
    <%- include('partials/navigation') %>
    <div class="content sign-up">
      <h2>Sign up to members only club</h2>
      <p>
        This sign up form has server side validation only. <br />
        I am sorry for the inconvinience
      </p>
      <form action="" method="post">
        <label for="firstName">First Name: </label><br />
        <!-- if user is defined take the first name else empty -->
        <input
          type="text"
          name="firstName"
          id="firstName"
          value="<%= locals.user ? user.firstName : '' %>"
        /><br />
        <label for="lastName">Last Name: </label><br />
        <input
          type="text"
          name="lastName"
          id="lastName"
          value="<%= locals.user ? user.lastName : '' %>"
        /><br />
        <label for="username">Username: </label><br />
        <input
          type="text"
          name="username"
          id="username"
          value="<%= locals.user ? user.username : '' %>"
        /><br />
        <label for="email">E-mail: </label><br />
        <input
          type="text"
          name="email"
          id="email"
          value="<%= locals.user ? user.email : '' %>"
        /><br />
        <label for="password">Password: </label><br />
        <input type="password" name="password" id="password" /><br />
        <label for="confirmPassword">Confirm Password: </label><br />
        <input
          type="password"
          name="confirmPassword"
          id="confirmPassword"
        /><br />
        <!-- <label for="password">Repeat password: </label><br />
        <input type="password" name="password" id="password" /> -->
        <!-- prettier-ignore -->
        <div class="errors">
          <% if (locals.errors) { %>
            <ul>
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          <% } %>
        </div>
        <button type="submit">Sign Up</button>
      </form>
    </div>
  </body>
</html>
